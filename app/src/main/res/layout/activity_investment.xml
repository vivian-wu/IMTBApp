<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/accounting_bg_850"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:shadowColor="@color/zxinglegacy_viewfinder_mask"
        android:shadowDx="2"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="◆ 股票資訊："
        android:textColor="@color/taupe"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/inv_text_stockname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="代碼："
            android:textSize="15dp" />

        <TextView
            android:id="@+id/inv_input_stockname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MIT 股票"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/inv_text_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="股票價格："
            android:textSize="15dp" />

        <TextView
            android:id="@+id/inv_input_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/inv_text_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="股利："
            android:textSize="15dp" />

        <TextView
            android:id="@+id/inv_input_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/inv_text_pricerange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="價格範圍："
            android:textSize="15dp" />

        <TextView
            android:id="@+id/inv_input_pricerange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10 ~ 30"
            android:textSize="15dp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:shadowColor="@color/zxinglegacy_viewfinder_mask"
        android:shadowDx="2"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="◆ 請選擇您要…"
        android:textColor="@color/taupe"
        android:textSize="20dp" />

    <RadioGroup
        android:id="@+id/inv_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/inv_rbt_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/zxing_contents_text"
            android:checked="true"
            android:text="買進" />

        <RadioButton
            android:id="@+id/inv_rbt_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/zxing_contents_text"
            android:checked="false"
            android:text="賣出" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="數量："
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/inv_ed_amount"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:inputType="number"
            android:paddingLeft="8dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="232dp"
            android:layout_height="24dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/inv_btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:onClick="add"
            android:text="確定" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:shadowColor="@color/zxinglegacy_viewfinder_mask"
            android:shadowDx="2"
            android:shadowDy="3"
            android:shadowRadius="3"
            android:text="◆ 持有股票："
            android:textColor="@color/taupe"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/inv_iuput_stocks"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@color/white_alpha"
            android:lineSpacingExtra="8sp"
            android:padding="15dp"
            android:text="　名稱　　　　價格　　數量\nMIT 股票　 　　10　　　　5　"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>